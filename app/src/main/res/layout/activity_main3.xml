<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.user.startupui.Main3Activity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/myborder2"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
        android:layout_marginTop="3dp"
      android:text="TYRE"
      android:paddingEnd="30dp"
      android:paddingRight="30dp"
      android:drawableLeft="@drawable/tyre_head"
      android:drawablePadding="5dp"
      android:drawableStart="@drawable/tyre_head"
        android:fontFamily="@font/merienda"
      android:textSize="30sp"
      android:textStyle="bold"
      android:textColor="@color/colorPrimaryDark" />


    <TextView
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@drawable/myborder"
        android:text="REPAIR / PATCH"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/tyre_repair"
        android:drawablePadding="30dp"
        android:drawableStart="@drawable/tyre_repair"
        android:drawableTint="#ffff"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:paddingLeft="80dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
      android:id="@+id/button2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:background="@drawable/myborder"
      android:text="SPARE WHEEL"
      android:drawableLeft="@drawable/tyre_spare"
        android:drawablePadding="30dp"
        android:drawableStart="@drawable/tyre_spare"
        android:drawableTint="#ffff"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:paddingLeft="80dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"
      android:textSize="20sp" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <CheckBox
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:checked="true"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Terms and Conditions"
      android:textSize="18sp"
      android:textColor="@android:color/white"/>

  </LinearLayout>

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/button8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:src="@drawable/ic_arrow_forward_black_24dp"
      app:fabSize="normal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:pressedTranslationZ="6dp" />

</android.support.constraint.ConstraintLayout>
